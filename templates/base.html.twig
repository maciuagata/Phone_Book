<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Phone Book
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<style>
				.btn-secondary {
					margin-left: 70rem;
				}
			</style>

			<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1E90FF;">

				<a class="navbar-brand" href="{{ path('index') }}">Phone book</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbar">
					{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('index') }}">View contacts</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('create-contact') }}">Add new contact</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('sharing') }}">Shared contacts</a>
							</li>
							<li class="nav-item ">
								<a class="btn btn-secondary" href="{{ path('logout') }}">Logout</a>
							</li>
						</ul>

					{% endif %}
				</div>
			</nav>
			<div class="container"> {% block body %}{% endblock %}{% block javascripts %}{% endblock %}
				</div>

			</body>
		</html>
